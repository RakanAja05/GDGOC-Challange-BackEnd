{
  "info": {
    "name": "GDGoC SaaS - Customer Role Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    },
    {
      "key": "userToken",
      "value": ""
    },
    {
      "key": "userName",
      "value": "Andi Prasetyo"
    },
    {
      "key": "userEmail",
      "value": "andi@example.com"
    },
    {
      "key": "userPassword",
      "value": "password"
    },
    {
      "key": "agentToken",
      "value": ""
    },
    {
      "key": "agentEmail",
      "value": "agent@example.com"
    },
    {
      "key": "agentPassword",
      "value": "password"
    },
    {
      "key": "conversationId",
      "value": ""
    },
    {
      "key": "agentConversationId",
      "value": ""
    },
    {
      "key": "otpCode",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Register (user)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"{{userName}}\",\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\",\n  \"password_confirmation\": \"{{userPassword}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Get OTP Code (dev-only)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.code) { pm.collectionVariables.set('otpCode', String(json.code)); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/email/verification/code",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "email",
            "verification",
            "code"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{userEmail}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Email Verification Status (user)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/email/verification/status?email={{userEmail}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "email",
            "verification",
            "status"
          ],
          "query": [
            {
              "key": "email",
              "value": "{{userEmail}}"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Resend Email Verification OTP (user, optional)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/email/verification/request",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "email",
            "verification",
            "request"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{userEmail}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Verify Email OTP (user)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/email/verification/verify",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "email",
            "verification",
            "verify"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"code\": \"{{otpCode}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Login (user)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.token) { pm.collectionVariables.set('userToken', json.token); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Get Current User",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/user",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "user"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Start Conversation (user)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.id) { pm.collectionVariables.set('conversationId', String(json.id)); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/conversations",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "conversations"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Halo, saya butuh bantuan untuk akun saya.\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Inbox (user)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "const first = json && json.data && json.data.length ? json.data[0] : null;",
              "if (first && first.id) { pm.collectionVariables.set('conversationId', String(first.id)); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/conversations/inbox?sort_by=newest&sort_dir=desc",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "conversations",
            "inbox"
          ],
          "query": [
            {
              "key": "sort_by",
              "value": "newest"
            },
            {
              "key": "sort_dir",
              "value": "desc"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Conversation Detail (user)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/conversations/{{conversationId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "conversations",
            "{{conversationId}}"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Send Reply (user)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/conversations/{{conversationId}}/messages",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "conversations",
            "{{conversationId}}",
            "messages"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Saya butuh bantuan untuk pesanan saya.\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Login (agent seeded)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.token) { pm.collectionVariables.set('agentToken', json.token); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{agentEmail}}\",\n  \"password\": \"{{agentPassword}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Inbox (agent, urgency)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "const first = json && json.data && json.data.length ? json.data[0] : null;",
              "if (first && first.id) { pm.collectionVariables.set('agentConversationId', String(first.id)); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{agentToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/conversations/inbox?sort_by=urgency&sort_dir=desc",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "conversations",
            "inbox"
          ],
          "query": [
            {
              "key": "sort_by",
              "value": "urgency"
            },
            {
              "key": "sort_dir",
              "value": "desc"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "AI Inbox Intelligence (requires agent/lead)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
