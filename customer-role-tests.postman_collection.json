{
  "info": {
    "name": "GDGoC SaaS - Customer Role Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "email",
      "value": "customer1@example.com"
    },
    {
      "key": "password",
      "value": "password"
    },
    {
      "key": "conversationId",
      "value": "1"
    },
    {
      "key": "otpCode",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Register (customer)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Customer One\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"password_confirmation\": \"{{password}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Get OTP Code (dev-only)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.code) { pm.collectionVariables.set('otpCode', String(json.code)); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/email/verification/code",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "email",
            "verification",
            "code"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Email Verification Status (customer)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/email/verification/status?email={{email}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "email",
            "verification",
            "status"
          ],
          "query": [
            {
              "key": "email",
              "value": "{{email}}"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Resend Email Verification OTP (customer, optional)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/email/verification/request",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "email",
            "verification",
            "request"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Verify Email OTP (customer)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/email/verification/verify",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "email",
            "verification",
            "verify"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"code\": \"{{otpCode}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Login (customer)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.token) { pm.collectionVariables.set('token', json.token); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Get Current User",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/user",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "user"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Inbox (customer)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "const first = json && json.data && json.data.length ? json.data[0] : null;",
              "if (first && first.id) { pm.collectionVariables.set('conversationId', String(first.id)); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/conversations/inbox",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "conversations",
            "inbox"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Conversation Detail (customer)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/conversations/{{conversationId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "conversations",
            "{{conversationId}}"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Send Reply (customer)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/conversations/{{conversationId}}/messages",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "conversations",
            "{{conversationId}}",
            "messages"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Saya butuh bantuan untuk pesanan saya.\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "AI Inbox Intelligence (requires agent/lead)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/ai/inbox",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "ai",
            "inbox"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"conversation_id\": {{conversationId}}\n}"
        }
      },
      "response": []
    },
    {
      "name": "AI Conversation Summary (requires agent/lead)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/ai/summary",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "ai",
            "summary"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"conversation_id\": {{conversationId}}\n}"
        }
      },
      "response": []
    },
    {
      "name": "AI Reply Suggestion (requires agent/lead)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/ai/reply",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "ai",
            "reply"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"conversation_id\": {{conversationId}}\n}"
        }
      },
      "response": []
    },
    {
      "name": "Logout (customer)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/logout",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "logout"
          ]
        }
      },
      "response": []
    }
  ]
}
